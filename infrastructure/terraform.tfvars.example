# AWS Cost Dashboard - Terraform Configuration
# Copy this file to terraform.tfvars and update with your values

aws_region             = "eu-west-2"
domain_name            = "yourdomain.com"
github_repo            = "your-username/aws-cost-dashboard"
alert_email            = "your-email@example.com"
terraform_state_bucket = "terraform-state-aws-cost-dashboard-YOUR-NAME"
image_tag              = "latest"

# Network Configuration (Optional - defaults shown)
cidr_blockvpc           = "10.0.0.0/16"
cidr_public_subnet_web  = ["10.0.0.0/24", "10.0.1.0/24"]
cidr_private_subnet_app = ["10.0.101.0/24", "10.0.102.0/24"]
availability_zones      = ["eu-west-2a", "eu-west-2b"]

# ECS Configuration (Optional - defaults shown)
ecs_cpu           = "512"   # 0.5 vCPU
ecs_memory        = "1024"  # 1 GB RAM
ecs_desired_count = 1       # Number of tasks
